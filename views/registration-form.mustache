<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3b241a', // Navbar background
                        accent: '#EBD9C1', // Text and button accents
                        secondary: '#744f36', // Form background
                    },
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                    },
                },
            },
        };
    </script>
</head>

<body class="bg-accent font-sans flex flex-col min-h-screen">

<!-- Navigation Bar -->
<nav class="bg-primary shadow-md">
    <div class="container mx-auto flex justify-between items-center py-4 px-6">
        <a href="/">
            <img src="/assets/logo.png" class="h-12" alt="Logo">
        </a>
        <ul class="hidden md:flex space-x-6">
            <li>
                <a href="/" class="text-white relative after:block after:w-0 after:h-[2px] after:bg-accent after:transition-all after:duration-300 after:mt-[3px] hover:after:w-full">
                    Home
                </a>
            </li>
            <li>
                <a href="/menu" class="text-whitet relative after:block after:w-0 after:h-[2px] after:bg-accent after:transition-all after:duration-300 after:mt-[3px] hover:after:w-full">
                    Menu
                </a>
            </li>
            <li>
                <a href="/faqs" class="text-white relative after:block after:w-0 after:h-[2px] after:bg-accent after:transition-all after:duration-300 after:mt-[3px] hover:after:w-full">
                    FAQs
                </a>
            </li>
            <li>
                <a href="/contact" class="text-white relative after:block after:w-0 after:h-[2px] after:bg-accent after:transition-all after:duration-300 after:mt-[3px] hover:after:w-full">
                    Contact
                </a>
            </li>
            <li>
                <a href="/rate-menu" class="text-white relative after:block after:w-0 after:h-[2px] after:bg-accent after:transition-all after:duration-300 after:mt-[3px] hover:after:w-full">
                    Rate
                </a>
            </li>
        </ul>
        <div class="flex space-x-4">
            {{#username}}
                <span class="text-white">Welcome, <strong>{{username}}</strong></span>
                <a href="/?logout=true" class="bg-red-500 text-white py-1 px-4 rounded hover:bg-red-600 transition">Logout</a>
            {{/username}}
            {{^username}}
                
                <a href="/login" class="px-6 py-2 border border-white bg-white text-primary rounded-full hover:bg-primary hover:text-white transition">Admin Login</a>
            {{/username}}
        </div>
    </div>
</nav>

<!-- Main Registration Form -->
<div class="flex-grow container mx-auto flex items-center justify-center py-12 px-6">
    <div class="bg-secondary p-8 rounded-lg shadow-lg w-full max-w-lg">
        <h2 class="text-3xl font-bold text-accent text-center mb-6">Registration Form</h2>
        <form action="/register" method="POST" class="space-y-6">
            <!-- First Name -->
            <div>
                <label for="first_name" class="block text-accent font-medium mb-2">First Name <span class="text-red-500">*</span></label>
                <input 
                    type="text" 
                    id="first_name" 
                    name="first_name" 
                    required 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none"
                >
            </div>

            <!-- Last Name -->
            <div>
                <label for="last_name" class="block text-accent font-medium mb-2">Last Name <span class="text-red-500">*</span></label>
                <input 
                    type="text" 
                    id="last_name" 
                    name="last_name" 
                    required 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none"
                >
            </div>

            <!-- Email Address -->
            <div>
                <label for="email" class="block text-accent font-medium mb-2">Email Address <span class="text-red-500">*</span></label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none"
                >
            </div>

            <!-- Password -->
            <div>
                <label for="password" class="block text-accent font-medium mb-2">Password <span class="text-red-500">*</span></label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required 
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none"
                >
            </div>

            <!-- Submit Button -->
            <div>
                <button 
                    type="submit" 
                    class="w-full bg-accent text-primary py-3 rounded-lg hover:bg-white hover:text-secondary transition focus:outline-none focus:ring-2 focus:ring-secondary"
                >
                    Register
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Footer -->
<footer class="bg-primary text-accent text-center py-4 mt-auto">
    <p>Â© 2024 Barako. All Rights Reserved.</p>
</footer>

</body>
</html>
